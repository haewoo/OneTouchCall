<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.woorinfo.android.phone"
      android:versionName="1.3.27" android:versionCode="27">
    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>
    <uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".OneTouchCallActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name="OneTouchWidgetProvider1By1" 
            android:label="@string/app_name_1_by_1">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="net.woorinfo.android.phone.action.APPWIDGET_UPDATE_1_BY_1" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" 
                android:resource="@xml/my_call_appwidget_info_1_by_1"></meta-data>
        </receiver>
        <receiver android:name="OneTouchWidgetProvider2By2"  
            android:label="@string/app_name_2_by_2">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="net.woorinfo.android.phone.action.APPWIDGET_UPDATE_2_BY_2"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/my_call_appwidget_info_2_by_2" android:value="true"></meta-data>
        </receiver>
        <receiver android:name="OneTouchWidgetProvider4By1" android:label="@string/app_name_4_by_1">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="net.woorinfo.android.phone.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:resource="@xml/my_call_appwidget_info" 
                android:name="android.appwidget.provider"></meta-data>
        </receiver>
        <receiver android:name="OneTouchWidgetProvider4By2" android:label="@string/app_name_4_by_2">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"></action>
                <action android:name="net.woorinfo.android.phone.action.APPWIDGET_UPDATE"></action>
            </intent-filter>
            <meta-data android:resource="@xml/my_call_appwidget_info2" android:name="android.appwidget.provider"></meta-data>
        </receiver>
        <activity android:name="FavoriteSelectActivity">
            <intent-filter>
                <action android:name="net.woorinfo.android.phone.action.APPWIDGET_UPDATE_1_BY_1"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <provider android:authorities="net.woorinfo.android.phone.OneTouchCall" 
            android:name="OneTouchContentProvider"></provider>
    </application>
</manifest>